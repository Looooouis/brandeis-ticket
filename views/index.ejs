

  <div>
    <h1> Authentication Demo </h1>
    <p>Welcome to the Authentication Demo </p>
    <ul>
      <li><a href="/dbdemo">See database API </a></li>
      <% if (loggedIn) {%>
      <li><a href="/profile">See your profile </a></li>
      <li><a href="/profiles">See everyone's profile</a></li>
      <li><a href="/todo">See your to do list </a></li>
      <li><a href="/todoAjax">See your to do list with Ajax </a></li>
      <% } %>
    </ul>
  </div>

  <div>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Show Name</th>
        <th>Poster</th>
        <th>View Show</th>
      </tr>
      </thead>
      <tbody>
      <% list.forEach(show => { %>
      <tr>
        <td><%= show.showname %></td>
        <td><img src="<%= show.showpicurl %>" alt ="show poster"/> </td>
        <td><a href="./individualShow/<%= show._id %>">View Show</a></td>
      </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
